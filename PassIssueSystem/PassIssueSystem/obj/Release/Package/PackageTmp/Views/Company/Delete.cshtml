@model PassIssueSystem.Models.Company

@{
    ViewBag.Title = "Delete";
}

<div class="col-xs-12">
    <div class="row">
    </div>
</div>
<div class="col-sm-12">
    <div class='row'>
        <div class='col-sm-12'>
            <div class='box bordered-box fb-border'>
                <div class='box-header fb-background'>
                    <div class='title'>
                        <i class='icon-building'></i>
                        Delete Company
                    </div>
                    <div class='actions'>
                        <a class="btn box-remove btn-xs btn-link" href="#"><i class='icon-remove'></i>
                        </a>
                        <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
                        </a>
                    </div>
                </div>
                <div class='box-content box-double-padding'>
                    <fieldset>
                        <legend>Are you sure you want to Delete this?</legend>

                        <div class="form-group">
                            <div class="col-md-2 control-label">
                                @Html.DisplayNameFor(model => model.CompanyName)
                            </div>
                            <div class="col-md-5">
                                @Html.DisplayFor(model => model.CompanyName)
                            </div>
                        </div>
                    </fieldset>
                    <form class="form form-horizontal" style="margin-bottom: 0;" method="post" action="#" accept-charset="UTF-8">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class='form-actions form-actions-padding-sm'>
                                <div class='row'>
                                    <div class='col-md-10 col-md-offset-2'>
                                        <button class='btn btn-primary' type='submit' value="Delete" style="margin-bottom: 5px">
                                            <i class='icon-save'></i>
                                            Delete
                                        </button>
                                        <a href="@Url.Action("Index", "Company")" class="btn btn-default" style="margin-bottom:5px">
                                            <i class="icon-undo"></i>
                                            <span>Cancel</span></a>
                                    </div>
                                </div>
                            </div>                            
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
