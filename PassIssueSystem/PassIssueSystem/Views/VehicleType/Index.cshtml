@model IEnumerable<PassIssueSystem.Models.VehicleType>

@{
    ViewBag.Title = "Index";
}
<html>
<head>
    <title>Vehicle Type Details</title>
</head>
<body class='contrast-red'>
    <header></header>
    <section id='content'>
        <div class='row' id='content-wrapper'>
            <div class='col-sm-12'>
                <div class='row'>
                    <div class='col-sm-12'>
                        <div class='box bordered-box blue-border'>
                            <p>
                                @Html.ActionLink("Create New Vehicle Type", "Create")
                            </p>
                            <table>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.VehicleFee)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AddDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AddUser)
                                    </th>
                                    <th></th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VehicleFee)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AddUser)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.VehicleCode }) |
            @Html.ActionLink("Details", "Details", new { id = item.VehicleCode }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.VehicleCode })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
