@model IEnumerable<PassIssueSystem.Models.UserProfile>

@{
    ViewBag.Title = "Index";
}

<div class="col-xs-12">
    <div class="row">
    </div>
</div>
<div class="col-sm-12">
    <div class='row'>
        <div class='col-sm-12'>
            <div class='box bordered-box fb-border'>
                <div class='box-header fb-background'>
                    <div class='title'>
                        <i class='icon-road'></i>
                        User Details
                    </div>
                    <div class='actions'>
                        <a class="btn box-remove btn-xs btn-link" href="#"><i class='icon-remove'></i>
                        </a>
                        <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
                        </a>
                    </div>
                </div>
                <div class='box-content box-double-padding'>
                    <p>
                        <a href="@Url.Action("Register", "Account")" class="btn btn-success"  style="margin-bottom:5px"><i class="icon-bullseye"></i>
                            <span>New</span></a>
                    </p>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="box bordered-box green-border" style="margin-bottom: 0;">
                                <div class="box-header green-background">
                                </div>
                                <div class="responsive-table">
                                    <div class="scrollable-area">
                                        <table class="table table-bordered table-hover table-striped" style="margin-bottom: 0;">

                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.UserId)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.UserName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.CompanyID)
                                                </th>
                                                <th></th>
                                            </tr>

                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UserId)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UserName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CompanyID)
                                                    </td>

                                                    <td>
                                                        <a href="@Url.Action("Manage", "Account", new { id = item.UserId })" class="btn btn-warning btn-sm" style="margin-bottom:auto"><i class="icon-bullseye"></i>
                                                            <span>Manage</span></a>
                                                    </td>
                                                </tr>                            
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
