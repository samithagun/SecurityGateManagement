@model PassIssueSystem.Models.PassRequestHed

@{
    ViewBag.Title = "New Pass Request";
}

<div class="col-xs-12">
    <div class="row">
    </div>
</div>
<div class="col-sm-12">
    <div class='row'>
        <div class='col-sm-12'>
            <div class='box bordered-box fb-border'>
                <div class='box-header fb-background'>
                    <div class='title'>
                        <i class='icon-road'></i>
                        New Pass Request
                    </div>
                    <div class='actions'>
                        <a class="btn box-remove btn-xs btn-link" href="#"><i class='icon-remove'></i>
                        </a>
                        <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
                        </a>
                    </div>
                </div>
                <div class="box-content">
                    <form class="form form-horizontal" style="margin-bottom: 0;" method="post" action="#" accept-charset="UTF-8">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <fieldset>
                                <legend class='box-header green-background'>Fill Header Details</legend>

                                <div class="form-group">
                                    <div class="col-md-2 control-label">
                                        @Html.LabelFor(model => model.RequiredFrom)
                                    </div>
                                    <div class="col-md-5">
                                        <div class='datetimepicker-input input-group' id='datepickerfrom'>
                                            @Html.TextBoxFor(model => model.RequiredFrom, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.RequiredFrom)
                                            <span class='input-group-addon'>
                                                <span data-icon-element=''></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2 control-label">
                                        @Html.LabelFor(model => model.RequiredTo)
                                    </div>
                                    <div class="col-md-5">
                                        <div class='datetimepicker-input input-group' id='datepickerto'>
                                            @Html.TextBoxFor(model => model.RequiredTo, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.RequiredTo)
                                            <span class='input-group-addon'>
                                                <span data-icon-element=''></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2 control-label">
                                        @Html.LabelFor(model => model.Comments)
                                    </div>
                                    <div class="col-md-5">
                                        @Html.TextBoxFor(model => model.Comments, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Comments)
                                    </div>
                                </div>

                                <div class='box bordered-box blue-border' style='margin-bottom: 0;'>
                                    <div class='box-header green-background'>
                                        <div class='title'>Fill Person Details</div>
                                        <div class='actions'>
                                            <a class="btn box-collapse btn-xs btn-link" href="#"><i></i>
                                            </a>
                                        </div>
                                    </div>
                                    <div class='box-content box-no-padding'>
                                        <div class='responsive-table'>
                                            <div class='scrollable-area'>
                                                <table class='table' style='margin-bottom: 0;'>
                                                    <thead>
                                                        <tr>
                                                            <th>Name
                                                            </th>
                                                            <th>National ID No
                                                            </th>
                                                            <th>VIP
                                                            </th>
                                                            <th>Mobile No
                                                            </th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>
                                                                <div class="col-md-5">
                                                                    @Html.TextBox("name")
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="col-md-5">
                                                                    @Html.TextBoxFor(model => model.PassRequestDets.FirstOrDefault().PersonNIC, new { @class = "form-control" })
                                                                    @Html.ValidationMessageFor((model => model.PassRequestDets.FirstOrDefault().PersonNIC))
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <a class='btn btn-success btn-xs' href='#'>
                                                                    <i class='icon-ok'></i>
                                                                </a>
                                                                <a class='btn btn-danger btn-xs' href='#'>
                                                                    <i class='icon-remove'></i>
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <div class="col-md-5">
                                                                    @Html.TextBox("mobile")
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class='form-actions form-actions-padding-sm'>
                                    <div class='row'>
                                        <div class='col-md-10 col-md-offset-2'>
                                            <button class='btn btn-primary' type='submit' value="Create">
                                                <i class='icon-save'></i>
                                                Save
                                            </button>
                                            <a href="@Url.Action("Index", "VehicleType")" class="btn btn-default" style="margin-bottom:5px">
                                                <i class="icon-undo"></i>
                                                <span>Cancel</span></a>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        }
                    </form>


                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
                </div>
            </div>
        </div>
    </div>
</div>

